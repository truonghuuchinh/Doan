@model AppUserRequest
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<style>
    #inputSearch {
        border-radius: 10px 0px 0px 10px;
    }

    #btnforgotPassword {
        width: 108px;
        height: 37px;
        border-radius: 10px;
    }

    .input-group__forgot {
        padding: 30px !important;
    }

    .h6Forgot {
        margin-right: 17px;
        margin-top: 8px;
    }

    .avatar {
        border-radius: 50%;
        width: 40px;
        height: 40px;
        margin-left: 25px;
    }

    #choose {
        margin-top: 14px;
        width: 15px !important;
    }

    .pforgot {
        margin-top: 9px;
        margin-left: 10px;
    }

    #formUpdate {
        display: none;
        margin-left:16px;
    }

    .frmfofgot {
        display: flex !important;
        padding: 30px !important;
    }

    #errorMessage {
        width: 100%;
        margin-left: 130px;
    }

    .btn-add {
        display: none;
    }

    .btn-outline-primary {
        margin-left: 170px;
        margin-bottom: 20px;
    }

    .input-group__forgot .btn-primary {
        width: 10%;
        border-radius: 0px 10px 10px 0px;
        height: 38px;
    }
    .modal-header button{
        width:50px; 
        color:red;
    }
</style>
<div class="content">
    <div class="input-group input-group__forgot">

        <h6 class="h6Forgot">Nhập Email :</h6>
        <input asp-for="Email" placeholder="Vui lòng nhập Email" type="search" id="inputSearch" class="form-control" />
        <button type="button" class="btn btn-primary btnforgotPassword ">
            <i class="zmdi zmdi-search"></i>
        </button>
        <span id="errorMessage" class="text-danger"></span>
    </div>

    <form method="post" id="formUpdate" asp-action="ConfirmPassword">
        <div id="user" class="form-group mb-4 frmfofgot">

        </div>
        <button type="submit" class="btn btn-outline-primary textclick btnforgotPassword">
            Xác nhận
        </button>
    </form>
</div>

<script>
    $(".textclick").click(function () {
        $(".img-loading").css("display", "block");
    });
    $(".btn-primary").click(function () {
        var email = $("#inputSearch").val();
        if (email == '')
            $("#errorMessage").text("Vui lòng nhập Email");
        else {
            $("#errorMessage").text("");
            $("#user").text("");

            $("#formUpdate").css("display", "block");
            $.get("/Administration/Home/SearchEmail/?email=" + email, function (respone) {

                if (respone != "null") {
                    respone = JSON.parse(respone);
                    $("#user").append(`
                        <input id="choose" type="checkbox" value="" />
                        <input name="LoginExternal"  type="hidden" value="${respone.LoginExternal}" />
                        <input name="Avartar"  type="hidden" value="${respone.Avartar}" />
                        <input name="Id"  type="hidden" value="${respone.Id}" />
                         <input name="PasswordHash"  type="hidden" value="${respone.PasswordHash}" />
                        <input name="SecurityStamp"  type="hidden" value="${respone.SecurityStamp}" />
                        <input name="Email"  type="hidden" value="${respone.Email}" />
                        <img class="avatar" src="${respone.LoginExternal ? respone.Avartar : "/Client/avartar/" + respone.Avartar}" alt="Alternate Text" />
                        <p class="pforgot">${respone.Email}</p>
                        `);
                } else {
                    $("#user").html("<h3>Email chưa đăng ký hoặc không tồn tại!</h3>")
                }
            });
        }

    });
</script>

