@model AppUserRequest
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<style>
    #inputSearch {
        border-radius: 10px;
    }

    button {
        width: 108px;
        height: 37px;
        border-radius: 10px;
    }

    .input-group {
        padding: 30px !important;
    }

    h6 {
        margin-right: 17px;
        margin-top: 8px;
    }

    .avatar {
        border-radius: 50%;
        width: 40px;
        height: 40px;
        margin-left: 25px;
    }

    #choose {
        margin-top: 14px;
        width: 15px !important;
    }
   
    p {
        margin-top: 9px;
        margin-left: 10px;
    }

    #formUpdate {
        display: none;
    }
    .form-group.mb-4 {
        display: flex !important;
        padding: 30px !important;
    }
    
    #errorMessage {
        width: 100%;
        margin-left: 130px;
    }

    .btn-add {
        display: none;
    }
    .btn-outline-primary {
        margin-left: 200px;
        margin-bottom: 20px;
    }
    .btn-primary{
        margin-left:10px;
    }
</style>
<div class="content">
    <div class="input-group">

        <h6>Nhập tên Email</h6>
        <input asp-for="Email" placeholder="Vui lòng nhập Email" type="search" id="inputSearch" class="form-control" />
        <button type="button" class="btn btn-primary">
            <i class="zmdi zmdi-search"></i>
        </button>
        <span id="errorMessage" class="text-danger"></span>
    </div>

    <form method="post" id="formUpdate" asp-action="ConfirmPassword">
        <div id="user">
        </div>
    </form>
</div>

<script>
    $(".btn-primary").click(function () {
        var email = $("#inputSearch").val();
        if (email == '')
            $("#errorMessage").text("Vui lòng nhập Email");
        else {
            $("#errorMessage").text("");
            $("#user").text("");

            $("#formUpdate").css("display", "block");
            $.get("/Administration/Home/SearchEmail/?email=" + email, function (respone) {

                if (respone != "null") {
                    respone = JSON.parse(respone);
                    $("#user").append(`<div class="form-group mb-4">
                        <input id="choose" type="checkbox" value="" />
                        <input name="LoginExternal"  type="hidden" value="${respone.LoginExternal}" />
                        <input name="Avartar"  type="hidden" value="${respone.Avartar}" />
                        <input name="Id"  type="hidden" value="${respone.Id}" />
                         <input name="PasswordHash"  type="hidden" value="${respone.PasswordHash}" />
                        <input name="SecurityStamp"  type="hidden" value="${respone.SecurityStamp}" />
                        <input name="Email"  type="hidden" value="${respone.Email}" />
                        <img class="avatar" src="${respone.LoginExternal ? respone.Avartar : "/Client/avartar/" + respone.Avartar}" alt="Alternate Text" />
                        <p>${respone.Email}</p></div> 
                        <button type="submit" class="btn btn-outline-primary">
                                Xác nhận </button>`);
                } else {
                    $("#user").html("<h3>Email chưa đăng ký hoặc không tồn tại!</h3>")
                }
            });
        }

    });
</script>

